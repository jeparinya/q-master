generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model ServicePoint {
  id        Int     @id @default(autoincrement())
  name      String
  code      String  @unique
  counters  Counter[]
  queues    Queue[]
  createdAt DateTime @default(now())
}

model Counter {
  id             Int     @id @default(autoincrement())
  name           String
  code           String  @unique
  point          Int?
  servicePointId Int
  servicePoint   ServicePoint @relation(fields: [servicePointId], references: [id])
  queues         Queue[]
  createdAt      DateTime @default(now())
}

model Queue {
  id            Int      @id @default(autoincrement())
  queueNumber   Int
  prefix        String?  // e.g., "A", "B"
  servicePointId Int
  counterId     Int?     // เมื่อถูกเรียกจึงผูกกับ counter
  status        String   @default("waiting") // waiting, calling, served, skipped
  createdAt     DateTime @default(now())
  calledAt      DateTime?
  servedAt      DateTime?
  note          String?
  hn            String?
  name          String?
  vn            String?
  vstdate       DateTime?
  department    String?
  servicePoint ServicePoint @relation(fields: [servicePointId], references: [id])
  counter      Counter?     @relation(fields: [counterId], references: [id])

  @@index([servicePointId, status])
}